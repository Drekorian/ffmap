<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>viewAllUsers</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.viewAllUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewUser</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.viewUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllMeals</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.viewAllMealsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewMeal</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.viewMealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerUserServlet</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.registerNewUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userLogin</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.userLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewJoint</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.viewJointServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllJoints</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.viewAllJointsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>allJointsMap</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.viewAllJointsMapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.userLogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addMeal</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.addMealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteMeal</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.deleteMealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editMeal</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.editMealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>cz.muni.fi.pb138.ffmap.classes.servlets.deleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewAllUsers</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewUser</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllMeals</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewMeal</servlet-name>
        <url-pattern>/meal/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerUserServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewJoint</servlet-name>
        <url-pattern>/joint/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllJoints</servlet-name>
        <url-pattern>/joints</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>allJointsMap</servlet-name>
        <url-pattern>/allJointsMap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addMeal</servlet-name>
        <url-pattern>/addMeal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteMeal</servlet-name>
        <url-pattern>/deleteMeal/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editMeal</servlet-name>
        <url-pattern>/editMeal/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
